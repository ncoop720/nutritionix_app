<%= form_tag change_grams_path(index: index), remote: true do %>
	<%= hidden_field_tag :grams_old, food[:grams] %>
	<%= number_field_tag :grams, food[:grams].round(2), min: 0, :step => 0.01, class: "form-control", style: "width: 100px; display: inline-block" %>
	<%= submit_tag "Update", class: "btn btn-default" %>
<% end %>