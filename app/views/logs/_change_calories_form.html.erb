<%= form_tag change_calories_path(index: index), remote: true do %>
	<%= hidden_field_tag :calories_old, food[:calories] %>
	<%= number_field_tag :calories, food[:calories].round(2), min: 0, :step => 0.01, class: "form-control", style: "width: 88px; display: inline-block", onchange: "Rails.fire(this.form, 'submit');"  %>
<% end %>